<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

    <RelativeLayout
        android:id="@+id/rl_commentMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.administrator.joyapplication.util.XCRoundRectImageView
            android:id="@+id/iv_comment_userImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/tv_comment_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_comment_userImg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_comment_userImg"
            android:text="北京手机网友"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_commentMsg"
        android:padding="10dp"
        android:text="你好,我是评论的内容,评论的内容,我是自适应大小的,我的宽是match parent,我的高是wrap_content!!!!!"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_comment_comment"
        android:layout_centerVertical="true"
        android:text="2016-11-11"
        android:textSize="13sp"
        android:textStyle="italic"/>

</RelativeLayout>