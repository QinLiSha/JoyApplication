<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_slidingmenu_left">

    <RelativeLayout
        android:id="@+id/layout_unlogin"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/iv_loginImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/tv_loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_loginImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="立即登录"
            android:textColor="@color/white"
            android:textSize="28sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="版本更新"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/share_little_bg"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_fun_weixin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/fun_share_weixin"/>

            <ImageView
                android:id="@+id/iv_fun_qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/addimport_qq"/>

            <ImageView
                android:id="@+id/iv_fun_friend"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/fun_share_friends"/>

            <ImageView
                android:id="@+id/iv_fun_weibo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/fun_share_weibo"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_logined"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <ImageView
            android:id="@+id/iv_loginedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"/>

        <TextView
            android:id="@+id/tv_loginedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_loginedImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="您已经登录"
            android:textColor="@color/white"
            android:textSize="28sp"/>
    </RelativeLayout>
</RelativeLayout>
