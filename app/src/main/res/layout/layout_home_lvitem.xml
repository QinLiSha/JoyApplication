<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_icon_item"
        android:layout_width="100dp"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/tv_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_icon_item"
        android:singleLine="true"
        android:text="我是标题-----我是标题-----我是标题-----我是标题"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/tv_summary_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_item"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_icon_item"
        android:singleLine="true"
        android:text="我是内容-----我是内容-----我是内容-----我是内容------"
        android:textSize="14sp"

        />


    <TextView
        android:id="@+id/tv_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:paddingRight="5dp"
        android:text="2000-01-01 00:00:00"
        android:textColor="#ff666666"
        android:textSize="10sp"/>


</RelativeLayout>